{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ 生成活动文件",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"${file}",
				"-L/usr/local/lib",
				"-lcryptopp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译器: /usr/bin/g++"
		},
		{
			"label": "C/C++: g++ 生成目标文件",
			"command": "/usr/bin/g++",
			"args": [
				"src/*.cpp",
				"-o",
				"obj/*.obj",
				"-L/usr/local/lib",
				"-lcryptopp"
			]
		}
	]
}